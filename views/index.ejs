<% include ./partials/header.ejs %>

  <header class="header">
    <div class="header-container">
      <div class="header-left">
        <div class="logo">
          <img src="./images/logo-pinterest.svg" alt="Pinterest Logo">
          <span class="logo-text">Pinterest</span>
        </div>
        <nav class="main-nav">
          <ul>
            <li><a href="#">Today</a></li>
            <li><a href="#">Watch</a></li>
            <li><a href="#">Explore</a></li>
          </ul>
        </nav>
      </div>
      <div class="header-right">
        <nav class="secondary-nav">
          <ul>
            <li><a href="#">About</a></li>
            <li><a href="#">Business</a></li>
            <li><a href="#">Press</a></li>
          </ul>
        </nav>
        <div class="buttons">
          <!-- Login Modal toggle -->
          <button id="openModalButton" class="login-btn rounded-full" type="button">Log in</button>

          <!-- login modal -->
          <div id="loginModal" class="fixed inset-0 hidden overflow-y-auto z-50">
            <div class="flex min-h-screen items-center justify-center">
              <!-- Background Overlay -->
              <div id="loginModalOverlay" class="fixed inset-0 bg-black opacity-50"></div>
              <div class="relative w-full max-w-md rounded-3xl bg-white p-6">
                <div class="mb-4 flex items-center justify-between">
                  <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
                    alt="Pinterest Icon" class="mx-auto h-12 w-12" />
                  <button id="closeModalButton"
                    class="rounded-full p-1.5 text-gray-900 hover:bg-gray-200 font-extrabold" aria-label="Close">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                      </path>
                    </svg>
                  </button>
                </div>
                <h2 class="mb-6 text-center text-zinc-700 text-4xl font-bold leading-none tracking-tighter">Welcome to
                  Pinterest</h2>
                <form action="/login" method="post" class="px-20">
                  <div class="mb-4">
                    <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                    <input type="text" placeholder="Username" id="username" name="username"
                      class="block w-full rounded-xl border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 hover:border-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-300"
                      required />
                  </div>
                  <div class="">
                    <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" id="password" name="password"
                      class="block w-full rounded-xl border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 hover:border-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-300"
                      placeholder="Password" required />
                  </div>
                  <div class="mb-4">
                    <a href="#" class="text-xs font-semibold text-gray-700 hover:underline">Forgotten your
                      password?</a>
                  </div>
                  <button type="submit"
                    class="focus:shadow-outline w-full rounded-full bg-red-600 px-4 py-2 font-bold text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">Login</button>
                </form>
                <p class="mx-auto mt-4 w-3/4 text-center text-xs font-light text-zinc-500">By continuing, you agree to
                  Pinterest's <br> <span class="font-medium text-black hover:underline hover:cursor-pointer">Terms of
                    Service;</span> and acknowledge
                  that
                  you've read
                  our <span class="font-medium text-black hover:underline hover:cursor-pointer">Privacy Policy;
                    Notice
                    at
                    collection;</span></p>
                <p id="switchToRegister"
                  class="mt-2 inline-block w-full text-center font-semibold text-zinc-700 hover:underline"><a href="#"
                    class="text-sm">Not on Pinterest yet? Sign up</a></p>
              </div>
            </div>
          </div>

          <!-- Register Modal toggle -->
          <button id="openRegisterModalButton" class="signup-btn rounded-full">Sign up</button>
          <div id="registerModal" class="fixed inset-0 hidden overflow-y-auto z-50">
            <div class="flex min-h-screen items-center justify-center">
              <!-- Background Overlay -->
              <div id="registerModalOverlay" class="fixed inset-0 bg-black opacity-50"></div>
              <div class="relative w-full max-w-md rounded-3xl bg-white p-6">
                <div class="mb-4 flex items-center justify-between">
                  <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
                    alt="Pinterest Icon" class="mx-auto h-12 w-12" />
                  <button id="closeRegisterModalButton"
                    class="rounded-full p-1 text-gray-900 hover:bg-gray-200 font-extrabold" aria-label="Close">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                      </path>
                    </svg>
                  </button>
                </div>
                <h2 class="m-6 mb-1 text-center text-zinc-700 text-4xl font-bold leading-none tracking-tighter">Create a
                  new
                  account</h2>
                <p class="mb-4 text-center text-base font-normal text-zinc-700">Find new ideas to try</p>
                <form action="/" method="post" class="px-20">
                  <div class="mb-4">
                    <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                    <input type="text" placeholder="Username" id="username" name="username"
                      class="block w-full rounded-xl border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 hover:border-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-300"
                      required />
                  </div>
                  <div class="mb-4">
                    <label for="fullname" class="block text-sm font-medium text-gray-700">Full Name</label>
                    <input type="text" placeholder="Full Name" id="fullname" name="fullname"
                      class="block w-full rounded-xl border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 hover:border-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-300"
                      required />
                  </div>
                  <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" placeholder="Email" id="email" name="email"
                      class="block w-full rounded-xl border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 hover:border-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-300"
                      required />
                  </div>
                  <div class="mb-4">
                    <label for="contact" class="block text-sm font-medium text-gray-700">Contact</label>
                    <input type="text" placeholder="Contact" id="contact" name="contact"
                      class="block w-full rounded-xl border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 hover:border-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-300"
                      required />
                  </div>
                  <div class="">
                    <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" id="password" name="password"
                      class="block w-full rounded-xl border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 hover:border-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-300"
                      placeholder="Password" required />
                  </div>
                  <button type="submit"
                    class="focus:shadow-outline w-full rounded-full bg-red-600 px-4 py-2 mt-4 font-bold text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">Create
                    Account</button>
                </form>
                <p class="mx-auto mt-4 w-3/4 text-center text-xs font-light text-zinc-500">By continuing, you agree to
                  Pinterest's <br> <span class="font-medium text-black hover:underline hover:cursor-pointer">Terms of
                    Service;</span> and acknowledge
                  that
                  you've read
                  our <span class="font-medium text-black hover:underline hover:cursor-pointer">Privacy Policy;
                    Notice
                    at
                    collection;</span></p>
                <p id="switchToLogin"
                  class="mt-2 inline-block w-full text-center font-semibold text-zinc-700 hover:underline"><a href="#"
                    class="text-sm">Already a member? Log in</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

